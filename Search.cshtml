@model IEnumerable<MVC_EF6_Example.Models.CustomerModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div align="center">
        @using (Html.BeginForm("search", "Home", FormMethod.Post,
                new { @class = "container", @style = "text-align:left;width:30%;" }))
        {
            <div class="form-group">
                <label class="form-control-static">search key:</label>
                <input type="text" id="key" name="key" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="search" class="btn-danger" />
            </div>
        }
        <table class="table" style="width:70%">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.customername)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.customerpassword)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.customercity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.customeremailid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.customerdetails)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.customername)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customerpassword)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customercity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customeremailid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customerdetails)
                    </td>
                    <td>
                        @Html.ActionLink("View details", "Find", "Home", new { id = item.customerid }, null)
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>
